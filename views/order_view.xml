<odoo>
    <record id="view_form_order" model="ir.ui.view">
        <field name="name">Order Form</field>
        <field name="model">tiktok.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- To add buttons and status widget -->
                    <button name="button_send"
                        type="object"
                        string="Send API"
                        class="oe_highlight" />

                    <field name="state" invisible="True" />
                    <field name="stage_id"
                        widget="statusbar"
                        options="{'clickable': True, 'fold_field': 'fold'}" />
                </header>
                <sheet>
                    <!-- Button box -->

                    <!-- Header title -->
                    <div class="oe_title">
                        <h3>Order Details</h3>
                        <label for="name" class="oe_edit_only" />
                        <h1><field name="name" /></h1>
                    </div>

                    <!-- Header fields -->
                    <group name="group_top">
                        <group name="group_left">
                            <field name="total_amount" />
                            <br/>
                            <field name="buyer_name" />
                            <field name="buyer_phone" />
                            <field name="order_date" widget="datetime" />
                            <br/>
                            <field name="fullfill_state_1" />
                        </group>
                        <group name="group_right">
                            <field name="currency_id" />
                            <br/>
                            <field name="buyer_address" />
                            <field name="buyer_zipcode" />
                            <br/>
                            <field name="design_state_1" />
                        </group>
                    </group>

                    <!-- Notebook -->
                    <notebook>
                        <page name="lines" string="Line Items">
                            <field name="line_ids">
                                <tree>
                                    <field name="order_line_id" />
                                    <field name="name" />
                                    <field name="sku_image"
                                        widget="image"
                                        options="{'size': [64, 64]}"
                                        optional="hide"/>
                                    <field name="mockup_front_image" widget="image" options="{'size': [64, 64]}" />
                                    <field name="design_front_image" widget="image" options="{'size': [64, 64]}" />
                                    <field name="mockup_back_image" widget="image" options="{'size': [64, 64]}" />
                                    <field name="design_back_image" widget="image" options="{'size': [64, 64]}" />
                                    <field name="sale_price" />
                                    <field name="currency_id" optional="hide" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_order" model="ir.ui.view">
        <field name="name">Order Tree</field>
        <field name="model">tiktok.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="fullfill_state_1"
                       widget="badge"
                       decoration-danger="fullfill_state_1 == 'not_fullfill'"
                       decoration-success="fullfill_state_1 == 'fullfilled'"
                />
                <field name="design_state_1"
                       widget="badge"
                       decoration-danger="design_state_1 == 'not_design'"
                       decoration-success="design_state_1 == 'designed'"
                />
                <field name="total_amount" />
                <field name="currency_id" optional="hide" />
            </tree>
        </field>
    </record>

    <record id="action_tiktok_order" model="ir.actions.act_window">
        <field name="name">Order Management</field>
        <field name="res_model">tiktok.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_tiktok_order"
        name="Order Management"
        parent="menu_tiktok"
        action="action_tiktok_order" />
</odoo>
